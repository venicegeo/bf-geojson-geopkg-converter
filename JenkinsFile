#!/usr/bin/groovy
@Library('pipelib@master') _
node ("sl61") {

  stage("Clean") {
    deleteDir()
    sh "pwd"
    sh "ls -al"
  }

  stage("Setup") {
    sh "mkdir -p source-repos"
    dir("./source-repos") {
      sh "mkdir -p java"
      sh "mkdir -p wkb"
      sh "mkdir -p core-java"
      sh "mkdir bf-converter"
    }
  }

  stage("Build/Push geopackage-wkb") {
    dir("./source-repos/wkb") {
      git url: "https://github.com/venicegeo/geopackage-wkb-java.git"
      withEnv(["PATH+MAVEN=${tool "M3"}/bin"]) {
        sh "mvn clean package -U -DskipTests"
        sh "pwd"
        sh "ls -al target/"
        mavenPush {
          mavenArtifact = 'target/wkb-*.jar'
          app = 'geopackage-wkb-java'
          mavenProject = 'beachfront'
          packaging = '.jar'
        }
      }
    }
  }

  stage("Build/Push geopackage-core") {
    dir("./source-repos/core-java") {
      git url: "https://github.com/venicegeo/geopackage-core-java.git"
      withEnv(["PATH+MAVEN=${tool "M3"}/bin"]) {
        sh "mvn clean package -U -DskipTests"
        mavenPush {
          mavenArtifact = 'target/geopackage-core*.jar'
          app = 'bf-geojson-geopkg-converter'
          mavenProject = 'beachfront'
          packaging = '.jar'
        }
      }
    }
  }

  //stage("Build/Deploye geopackage-java") {
  //  dir("./source-repos/java") {
  //    git url: "https://github.com/venicegeo/geopackage-java.git"
  //      sh "pwd"
  //      sh "ls -al"
  //      withEnv(["PATH+MAVEN=${tool "M3"}/bin"]) {
  //        //sh "mvn clean install -DskipTests"
  //        sh "mvn clean package"
  //      }
  //  }
  //}



  //stage("Build GGPKG Converter") {
  //  git url: "https://github.com/venicegeo/bf-geojson-geopkg-converter",
  //  branch: "master"
  //    sh "pwd"
  //    sh "ls -al"
  //}

}
